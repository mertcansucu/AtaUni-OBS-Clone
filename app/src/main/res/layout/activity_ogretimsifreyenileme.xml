<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292559"
    tools:context=".ogrencisifreyenileme">

    <Button
        android:id="@+id/ogretimsifreguncellemebutonu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="28dp"
        android:background="@null"
        android:backgroundTint="@color/white"
        android:text="Şifreyi Güncelle"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/editTextYeniSifreOgretim"
        app:layout_constraintTop_toBottomOf="@+id/editTextYeniSifreOgretim" />

    <EditText
        android:id="@+id/editTextYeniSifreOgretim"
        android:layout_width="273dp"
        android:layout_height="39dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="68dp"
        android:background="#D2B58D"
        android:ems="10"
        android:hint="Yeni Şifrenizi Giriniz"
        android:inputType="textPersonName"

        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="205dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextYeniSifreOgretim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ataturk_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>